---
export interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

<div class="container" style="padding-top: 2em; padding-bottom: 2em;">
  <h3 class="mg-md float-title">Technologies</h3>
  <ul class="list-unstyled list-tech list-bloc-39-style" id="techno">
    {
      technologies?.map((technologie) => (
        <li class="tag-techno">
          <p class="mg-clear mx-auto d-block">{technologie}</p>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .tag-techno {
    float: left;
    display: block;
    background-color: #e7e6e6;
    height: 50px;
    font-weight: 700;
    margin: 10px 10px 10px 10px;
    padding: 10px 25px 10px 25px;
    border-radius: 25px 25px 25px 25px;
  }
</style>
